<!DOCTYPE html>
<html>
<head>
    
    <meta charset="utf-8" />

    <link rel="shortcut icon" href="@Url.Content("~/Content/images/NeoPepoLogo.ico")" />
    <title>@ViewBag.Title</title>@*definicion de css*@
    <link href="@Url.Content("~/Content/agenda.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ThickBox.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables-1.9.0/media/css/jquery.dataTables_themeroller.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/DataTables-1.9.0/extras/TableTools/media/css/TableTools.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />

    @*definicion de js*@
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.custom.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

    @*jquery.unobtrusive-ajax.min.js Importante*@
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DataTables-1.9.0/media/js/jquery.dataTables.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DataTables-1.9.0/extras/TableTools/media/js/TableTools.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DataTables-1.9.0/extras/TableTools/media/js/ZeroClipboard.js")" type="text/javascript"></script>

    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-29762521-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

</script>
</head>
<body>
    <div class="page">
        <div id="logindisplay">            
            @Ajax.ActionLink("Home", "Inicio", "Agenda", new AjaxOptions { UpdateTargetId = "contenido", LoadingElementId = "cargando" })
            @Html.ActionLink("Carga", "Index", "Madres")
            @Html.Partial("_LogOnPartial")
        </div>
        <section id="main">
            <div id="contenido" style="overflow:auto">
                @RenderBody()
            </div>
        </section>
        <footer>
        </footer>
    </div>

    <div id="agenda_container" style="overflow:auto" >
            <div id="tabbox">
                <a href="#" id="madres" class="tab madres"> Buscar Madre</a> 
                <a href="#" id="agenda" class="tab select">Agenda</a>
            </div>
        <div id="agendabox" >
            @{Html.RenderAction("AgendaScroll", "Scroll");}
        </div>
        <div id="madresbox">
            @{Html.RenderAction("MadresScroll", "Scroll");}
        </div>
    </div>
    <script type="application/javascript">
        $(document).ready(function () {
            $(".tab").click(function () {
                var X = $(this).attr('id');

                if (X == 'madres') {
                    $("#agenda").removeClass('select');
                    $("#madres").addClass('select');
                    $("#agendabox").slideUp();
                    $("#madresbox").slideDown();
                }
                else {
                    $("#madres").removeClass('select');
                    $("#agenda").addClass('select');
                    $("#madresbox").slideUp();
                    $("#agendabox").slideDown();
                }

            });

        });
    </script>
</body>
</html>
